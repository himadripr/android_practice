<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context="info.androidhive.androidcamera.ConnectionFailureActivity">



    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageview"

        android:src="@drawable/server"
        android:layout_above="@+id/button_reload"
        android:layout_margin="10dp"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="match_parent"
        android:text="Unable to connect to server"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/textview"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_reload"
        android:onClick="onReload"
        android:background="@drawable/button_solid_background"
        android:padding="16dp"

        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"

        android:text="@string/reload"/>

</RelativeLayout>
