<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_margin"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.androidhive.androidcamera.OtpSendAndVerificationActivity">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textview"
        android:text="@string/enter_mobile_number_text"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="200dp"
            android:orientation="horizontal"
            android:weightSum="4"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_otp1"
                android:textColor="@android:color/black"
                android:clickable="false"
                android:focusable="false"

                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_otp2"
                android:textColor="@android:color/black"
                android:clickable="false"
                android:gravity="center"
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_otp3"
                android:textColor="@android:color/black"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_otp4"
                android:textColor="@android:color/black"
                android:clickable="false"
                android:gravity="center"
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

    <EditText
        android:id="@+id/ed_otp"
        android:enabled="false"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:onClick="onProceed"
        android:textColor="@android:color/white"
        android:background="@drawable/button_solid_background"
        android:layout_marginTop="80dp"/>

</LinearLayout>
